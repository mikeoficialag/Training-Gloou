<mvc:View xmlns:m="sap.m" 
controllerName="ns.project1.controller.Tabla" 
xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" 
xmlns:mvc="sap.ui.core.mvc" height="100%">
<m:Panel id="panel1" >
 <m:Button 
                    id="btnRegresar_01" 
                    text="Regresar" 
                    type="Back"
                    press="onNavBack"/>
</m:Panel>

	<fiori:Page id="_IDGenPage1">
		<fiori:header>
			<fiori:Bar id="_IDGenBar1">
				<fiori:middleContent>
					<Title id="_IDGenTitle1" text="Doctores"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>
		<fiori:content>
			<Toast id="demoToast" duration="1000"></Toast>
			<!-- path:aqui va el nombre del json model
	             path: 'Name' dentro del sorter es el atributo piloto ordenador	
				 mode= "SingleSelect" puede cambiar por multiselect para poder seleccionar mas de un row	
			     rowClick="handleRowClick" metodo cuando se le da click encima
				 selectionChange="handleSelectionChange" cuando se tiene ativado multiselect funcion
			-->
			<Table
				id="idProductsTable"
				stickyColumnHeader="true"
				rowClick="handleRowClick"
				mode="SingleSelect"
				selectionChange="handleSelectionChange"
				rows="{
					
					path: '/DoctorsReport', 
					sorter: {
						path: 'SupplierName'
					}
				}">
				<!--en toda la parte de las colums van las columnas y los textos
				    de cada columna dentro de una etiqueta, debo de ignorar algunos
					id como en el caso de las etiquetas que no son nadamas que texto-->
				<columns>
				<TableColumn id="_IDGenTableColumnid">
						<Label id="_IDGenLabelid" text="Id" />
					</TableColumn>
					<TableColumn id="_IDGenTableColumn1">
						<Label id="_IDGenLabel1" text="Nombre" />
					</TableColumn>
					<TableColumn id="_IDGenTableColumn2">
						<Label id="_IDGenLabel2" text="Edad" />
					</TableColumn>
					<TableColumn id="_IDGenTableColumn3">
						<Label id="_IDGenLabel3" text="Especialidad" />
					</TableColumn>
					<TableColumn id="_IDGenTableColumn4">
						<Label id="_IDGenLabel4" text="Contrato" />
					</TableColumn>
					<TableColumn id="_IDGenTableColumn5">
						<Label id="_IDGenLabel5" text="Sueldo" />
					</TableColumn>
				</columns>
				<!--Esta parte es la mas importante ya que es la de los renglones-->
				<rows>
					<TableRow id="_IDGenTableRow1" type="Active">
						<cells>
						<TableCell id="_IDGenTableCell6">
								<content>
									<Label id="_IDGenLabeid" text="{Id}"/>
								</content>
							</TableCell>
							<TableCell id="_IDGenTableCell1">
								<content>
									<Label id="_IDGenLabel6" text="{Nombre}"/>
								</content>
							</TableCell>
							<TableCell id="_IDGenTableCell2">
								<content>
									<Label id="_IDGenLabel7" text="{Edad}" />
								</content>
							</TableCell>
							<TableCell id="_IDGenTableCell3">
								<content>
									<Label id="_IDGenLabel8" text="{Especialidad}" />
								</content>
							</TableCell>
							<TableCell id="_IDGenTableCell4">
								<content>
									<Label id="_IDGenLabel9" text="{Contrato}" />
								</content>
							</TableCell>
							<TableCell id="_IDGenTableCell5">
								<content>
									<Label id="_IDGenLabel10" text="{Sueldo}" />
								</content>
							</TableCell>
						</cells>
					</TableRow>
				</rows>
			</Table>
		</fiori:content>
		
	</fiori:Page>
</mvc:View>
